<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="Diplom1.Views.AbbRating" Title="Рейтинг тестов аббитуриентов" BackgroundColor="White">
    <ContentPage.Content>
        <Grid>
            <Grid>
                <ListView BackgroundColor="White" x:Name="StudentsRating" IsPullToRefreshEnabled="True"
                      HasUnevenRows="True" Margin="10,20"
                      Refreshing="StudentsRating_Refreshing"
                      ItemTapped="StudentsRating_ItemTapped"
                      ItemSelected="StudentsRating_ItemSelected"
                      ItemsSource="{Binding ListR}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                            <yummy:PancakeView 
                                
                                CornerRadius="15"
                                HeightRequest="120" Margin="5"
                                BackgroundColor="#f0f0f5"
                                >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="70"/>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                        <Frame Margin="10" Grid.Column="0" Grid.RowSpan="3" BackgroundColor="#a3a3c2" CornerRadius="25">
                                            <Label FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black"  Text="{Binding ResultText}"/>
                                        </Frame>
                                        <Label FontSize="18"  Margin="7,10,7,0" TextColor="Black" Grid.Column="1" Grid.Row="0" Text="{Binding Fio}"/>
                                        <Label FontSize="16" Margin="7,0" TextColor="Black" Grid.Column="1" Grid.Row="1" Text="{Binding Phone}"/>
                                        <Label FontSize="10" Margin="7,0" TextColor="Black" Grid.Column="1" Grid.Row="2" Text="{Binding date}"/>
                                    </Grid>
                            </yummy:PancakeView>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <AbsoluteLayout IsVisible="{Binding IndicatorIsVisible}">
                <BoxView  Opacity="0.7" BackgroundColor="Black" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" />

                <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1" AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent">

                    <yummy:PancakeView CornerRadius="15" Shadow="{yummy:ShadowMarkup Color=White, Offset='0,10'}" HorizontalOptions="Center" HeightRequest="70" WidthRequest="70" BackgroundColor="Transparent">
                        <Frame BackgroundColor="Transparent" IsClippedToBounds="True" Padding="0" Margin="0" CornerRadius="15">
                            <Image Source="Spinner.gif" IsAnimationPlaying="True" Aspect="AspectFit" BackgroundColor="White"/>
                        </Frame>
                    </yummy:PancakeView>

                    <yummy:PancakeView CornerRadius="15,15,5,5" BackgroundColor="White" Padding="7" Shadow="{yummy:ShadowMarkup Color=White, Offset='5,10'}">
                        <Label TextColor="Black" Text="Загрузка ..." FontAttributes="Bold" VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </yummy:PancakeView>
                </StackLayout>
            </AbsoluteLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>