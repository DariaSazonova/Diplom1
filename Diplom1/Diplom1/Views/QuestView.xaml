<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="Diplom1.Views.QuestView" NavigationPage.HasNavigationBar="False" BackgroundColor="#cacecd">
    <Grid>
        <Grid Margin="0,20,0,0" BackgroundColor="White" RowSpacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" BackgroundColor="#cacecd" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <StackLayout  HorizontalOptions="Center" VerticalOptions="Center">
                    <Label   VerticalTextAlignment="Center" TextColor="White" FontSize="40" HorizontalTextAlignment="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                    <Span Text="Пройдите "  FontSize="40" />
                                    <Span Text="тест" FontSize="40"/>
                                </FormattedString.Spans>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                </StackLayout>
            </Grid>
            <StackLayout
                x:Name="ParStackLayout" 
                 Margin="25,80,25,0" 
                 BindableLayout.ItemsSource="{Binding model}" 
                Grid.Row="1">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="False" Padding="5"  BackgroundColor="LightGray"  CornerRadius="15"  Margin="5" HeightRequest="40">
                            <ProgressBar 
                            Progress="{Binding progress}" 
                            ProgressColor="Green"/>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
            <StackLayout 
                x:Name="QuestionList" 
                Margin="25,0" 
                BindableLayout.ItemsSource="{Binding listQuestions}" 
                Grid.Row="2">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>

                                <RowDefinition Height="250"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label  x:Name="LabelQuestion"
                            TextColor="Black"
                            FontSize="Medium" 
                            Text="{Binding question}" 
                            Grid.Row="0" 
                            HorizontalTextAlignment="Center" 
                            VerticalTextAlignment="Center"/>

                            <ListView  
                                 
                                VerticalScrollBarVisibility="Never" 
                                HasUnevenRows="True" 
                                SeparatorColor="White"  
                                x:Name="ListButtons" 
                                BackgroundColor="White"  
                                ItemsSource="{Binding answers}" 
                                Grid.Row="1" 
                                ItemTapped="ListButtons_ItemTapped"
                                >
                                <ListView.ItemTemplate >
                                    <DataTemplate>
                                        <ViewCell >
                                            <StackLayout VerticalOptions="Center">
                                                <Frame
                                                    HasShadow="False"
                                                    Padding="5" 
                                                    BackgroundColor="Gray" 
                                                    CornerRadius="20" 
                                                    Margin="5" 
                                                    >
                                                    <Label 
                                                        TextColor="White"
                                                        VerticalTextAlignment="Center" 
                                                        HorizontalTextAlignment="Center" 
                                                        Text="{Binding }" FontSize="18"/>
                                                </Frame>
                                            </StackLayout>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>

            <AbsoluteLayout Grid.RowSpan="3" IsVisible="{Binding IndicatorIsVisible}">
                <BoxView  Opacity="0.7" BackgroundColor="Black" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" />

                <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1" AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent">

                    <yummy:PancakeView CornerRadius="15" Shadow="{yummy:ShadowMarkup Color=White, Offset='0,10'}" HorizontalOptions="Center" HeightRequest="70" WidthRequest="70" BackgroundColor="Transparent">
                        <Frame BackgroundColor="Transparent" IsClippedToBounds="True" Padding="0" Margin="0" CornerRadius="15">
                            <Image Source="Spinner.gif" IsAnimationPlaying="True" Aspect="AspectFit" BackgroundColor="White"/>
                        </Frame>
                    </yummy:PancakeView>

                    <yummy:PancakeView CornerRadius="15,15,5,5" BackgroundColor="White" Padding="7" Shadow="{yummy:ShadowMarkup Color=White, Offset='5,10'}">
                        <Label TextColor="Black" Text="идёт проверка" FontAttributes="Bold" VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </yummy:PancakeView>
                </StackLayout>
            </AbsoluteLayout>
        </Grid>
    </Grid>
</ContentPage>