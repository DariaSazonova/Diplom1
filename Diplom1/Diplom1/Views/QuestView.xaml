<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="Diplom1.Views.QuestView" NavigationPage.HasNavigationBar="False" BackgroundColor="#cacecd">
    <Grid>
        <Grid Margin="0,20,0,0" BackgroundColor="White" RowSpacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" BackgroundColor="#cacecd" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <StackLayout  HorizontalOptions="Center" VerticalOptions="Center">
                    <Label   VerticalTextAlignment="Center" TextColor="White" FontSize="40" HorizontalTextAlignment="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                    <Span Text="Пройдите "  FontSize="40" />
                                    <Span Text="тест" FontSize="40"/>
                                </FormattedString.Spans>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </StackLayout>
            </Grid>
            <StackLayout 
                x:Name="ParStackLayout" 
                 Margin="25,80,25,0" 
                 BindableLayout.ItemsSource="{Binding model}" 
                Grid.Row="1">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="False" Padding="5"  BackgroundColor="LightGray"  CornerRadius="15"  Margin="5" HeightRequest="40">
                            <ProgressBar 
                            Progress="{Binding progress}" 
                            ProgressColor="Green"/>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>

            <StackLayout 
                x:Name="QuestionList" 
                Margin="25,0" 
                BindableLayout.ItemsSource="{Binding ListQuestions}"
                Grid.Row="2">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="250"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label x:Name="LabelQuestion"
                            TextColor="Black"
                            FontSize="Medium" 
                            Text="{Binding question}" 
                            Grid.Row="0" 
                            HorizontalTextAlignment="Center" 
                            VerticalTextAlignment="Center">
                                
                            </Label>

                            <ListView  
                                VerticalScrollBarVisibility="Never" 
                                HasUnevenRows="True" 
                                SeparatorColor="White"  
                                x:Name="ListButtons"  
                                BackgroundColor="White"  
                                ItemsSource="{Binding answers}" 
                                ItemTapped="ListButtons_ItemTapped"
                                Grid.Row="1" 
                                >
                                <ListView.ItemTemplate >
                                    <DataTemplate>
                                        <ViewCell >
                                            <StackLayout VerticalOptions="Center">
                                                <Frame
                                                    HasShadow="False"
                                                    Padding="2" 
                                                    BackgroundColor="Gray" 
                                                    CornerRadius="15" 
                                                    Margin="5" 
                                                    >
                                                    <Label 
                                                        TextColor="White"
                                                        Margin="10"
                                                        VerticalTextAlignment="Center" 
                                                        HorizontalTextAlignment="Center" 
                                                        Text="{Binding }" FontSize="20">
                                                    <!--<Label.GestureRecognizers>
                                                        <PanGestureRecognizer PanUpdated="PanGestureRecognizer_PanUpdated"/>
                                                    </Label.GestureRecognizers>-->
                                                </Label>

                                                   

                                                </Frame>
                                            </StackLayout>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>

            <AbsoluteLayout Grid.RowSpan="3" IsVisible="{Binding IndicatorIsVisible}">
                <BoxView
                    AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                    AbsoluteLayout.LayoutFlags="All"
                    BackgroundColor="Black"
                    Opacity="0.7" />
                <StackLayout  AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1" AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent">
                    <yummy:PancakeView  HorizontalOptions="Center" HeightRequest="70" WidthRequest="70" BackgroundColor="Transparent">
                       <ActivityIndicator  BackgroundColor="Transparent" Color="White" IsRunning="True" />
                    </yummy:PancakeView>
                </StackLayout>
            </AbsoluteLayout>
        </Grid>
    </Grid>
</ContentPage>